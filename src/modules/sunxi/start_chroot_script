# shellcheck enable=require-variable-braces
## Source error handling, leave this in place
set -Ee

#!/bin/bash

echo "Unpack"
unpack /filesystem/home/pi/kernel-offline
echo "traitement fichier deb"
cd /home/pi/kernel-offline
sudo dpkg -i *.deb


echo "CrÃ©er le script bash pour header"
cat << 'EOF' > /root/fix_kernel.sh
#!/bin/bash

TARGET_KERNEL="6.6.16-current-sunxi"
CURRENT_KERNEL=$(uname -r)

echo "[ğŸ³|ğŸ”¨] VÃ©rification du kernel actuel..."
echo "[ğŸ³|ğŸ”¨] Kernel actuel : $CURRENT_KERNEL"
echo "[ğŸ³|ğŸ”¨] Kernel souhaitÃ© : $TARGET_KERNEL"

if [ "$CURRENT_KERNEL" != "$TARGET_KERNEL" ]; then
    echo "[ğŸ³|ğŸ”¨] Le kernel actuel ne correspond pas. Correction en cours..."
    
    # Installation offline du kernel
    if [ -d "/root/kernel-offline" ]; then
        echo "[ğŸ³|ğŸ”¨] Installation offline du kernel..."
        sudo dpkg -i /root/kernel-offline/*.deb
    else
        echo "[âŒ] Dossier /root/kernel-offline introuvable !"
        exit 1
    fi

    # Mise Ã  jour GRUB si prÃ©sent
    if command -v update-grub &>/dev/null; then
        echo "[ğŸ³|ğŸ”¨] Mise Ã  jour de GRUB..."
        sudo update-grub
    else
        echo "[âš ï¸] GRUB non trouvÃ©, ignorÃ©."
    fi

    echo "[ğŸ³|ğŸ”¨] RedÃ©marrage du systÃ¨me..."
    sudo reboot
else
    echo "[ğŸ³|ğŸ”¨] Le kernel est correct. Blocage des mises Ã  jour..."
    
    # Bloquer les mises Ã  jour
    sudo apt-mark hold linux-image-current-sunxi linux-headers-current-sunxi linux-libc-dev

    echo "[ğŸ³|ğŸ”¨] CrÃ©ation du fichier de prÃ©fÃ©rences APT..."
    sudo bash -c 'cat <<EOF > /etc/apt/preferences.d/no-kernel-upgrade
Package: linux-image-*
Pin: release *
Pin-Priority: -1

Package: linux-headers-*
Pin: release *
Pin-Priority: -1

Package: linux-libc-dev
Pin: release *
Pin-Priority: -1
EOF'

    echo "[ğŸ³|ğŸ”¨] Suppression du script pour Ã©viter qu'il ne tourne Ã  chaque dÃ©marrage..."
    sudo rm -f /etc/init.d/fix_kernel
    sudo rm -f /root/fix_kernel.sh
fi

EOF

sudo chmod +x /root/fix_kernel.sh

echo "Automatiser l'exÃ©cution au premier boot"
cat << 'EOF' > /etc/init.d/fix_kernel
#!/bin/bash
### BEGIN INIT INFO
# Provides:          fix_kernel
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Fix kernel on first boot
### END INIT INFO

/root/fix_kernel.sh

EOF

sudo chmod +x /etc/init.d/fix_kernel
sudo update-rc.d fix_kernel defaults
